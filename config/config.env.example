# NEW MCP Server - Environment Configuration Example
# Copy this file to .env and update the values
# ----------------------------------------------------

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY=your-api-key-change-this-in-production
BCRYPT_ROUNDS=12

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/mcp_server
MONGO_USERNAME=admin
MONGO_PASSWORD=your-mongo-password-change-this
MONGO_DATABASE=mcp_server
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-domain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Storage
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=txt,pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif,mp4,mp3
UPLOAD_DIRECTORY=./data/files
TEMP_DIRECTORY=./data/tmp

# Context Management
CONTEXT_TTL_SECONDS=3600  # 1 hour
CONTEXT_MAX_SIZE=1000
CONTEXT_CLEANUP_INTERVAL=300  # 5 minutes

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_FILE=./logs/mcp-server.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Firebase Configuration (for deployment)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY=./firebase-service-account.json

# SSL/TLS Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
SSL_ENABLED=false

# Development Settings (set to false in production)
DEBUG_SQL=false
DEBUG_REQUESTS=false
DEBUG_RESPONSES=false

# Performance Settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=100M

# Cache Settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=600  # 10 minutes

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups
